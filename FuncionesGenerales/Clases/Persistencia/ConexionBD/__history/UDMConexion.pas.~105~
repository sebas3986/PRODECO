unit UDMConexion;

interface

uses
  windows,forms, SysUtils, Classes, ZAbstractConnection, ZConnection, ActiveX,
  UGlobales;

type
  TDMConexion = class(TDataModule)
    ZConexion: TZConnection;
    conBDANI: TZConnection;
    procedure DataModuleCreate(Sender: TObject);
  private
    FHost     : string;
    FUsuario  : string;
    FPassword : string;
    FBaseDatos: string;
    FEsquema  : string;
    FPuerto   : Integer;
    FAmbiente : string;


  public
    Property Esquema: string read FEsquema write FEsquema;
    property Ambiente: string read FAmbiente write FAmbiente;

    procedure Conectar;
    procedure ConectarANI;

  end;

var
  DMConexion : TDMConexion;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

{$REGION 'METODOS PROPIOS'}

procedure TDMConexion.DataModuleCreate(Sender: TObject);
var
  ErroTipo : Boolean;
begin
  try
  {aqui se debe leer el .INI para cargar los parametros de conexión a la Base de Datos}
  CoInitialize(nil);
  ErroTipo:= True;
  //Sebastian Camacho 19/09/2018
    if AmbiEjecApli = 'DESA' then
    begin
      FHost     := '10.10.253.113';
      FUsuario  := 'prodeco.apl';
      FPassword := 'Prodeco2018';
      FBaseDatos:= 'PRODECO_DES';
      FEsquema  := 'prodeco_desa';
      FPuerto   := 5432;
      ErroTipo  := False;
    end
  else
    if AmbiEjecApli = 'PROD' then
    begin
      FHost     := '172.17.4.22';
      FUsuario  := 'produniandes';
      FPassword := 'Pr0dUn12015d';
      FBaseDatos:= 'UNIANDES';
      FEsquema  := 'andes_prod';
      FPuerto   := 5432;
      FAmbiente := 'PRODUCCIÓN';
      ErroTipo  := False;
    end
    else
      {Se utiliza en ULoginDevolucionEsta}
      if AmbiEjecApli = 'OPER' then
      begin
        FHost     := '172.17.4.22';
        FUsuario  := 'dsroperacion';
        FPassword := 'Mt1bp02016';
        FBaseDatos:= 'UNIANDES';
        FEsquema  := 'andes_prod';
        FPuerto   := 5432;
        FAmbiente := 'PRODUCCIÓN';
        ErroTipo  := False;
      end
      else
        if AmbiEjecApli = 'QA' then
        begin
          FHost     := '10.10.253.113';
          FUsuario  := 'dsroperacion';
          FPassword := 'Mt1bp02016';
          FBaseDatos:= 'PRODECO_QA';
          FEsquema  := 'andes_prod';
          FPuerto   := 5432;
          FAmbiente := 'QA';
          ErroTipo  := False;
        end;
  if ErroTipo then
        raise Exception.Create('Error en el parámetro de Tipo de Conexión de la Base de Datos.')
  else
  begin
    conectar;
    ConectarANI;
  end;
  except
    on e:Exception do
    begin
      Application.MessageBox(PChar('No se permite la ejecución de la Aplicacion.' + #10#13
                                    + '* ' + e.Message),'Información',
                                    MB_ICONINFORMATION + MB_OK);
      ExitProcess(0);
    end;
  end;
end;

procedure TDMConexion.Conectar;
begin
  try
    with ZConexion do
    begin
      User     := FUsuario;
      Password := FPassword;
      HostName := FHost;
      Port     := FPuerto;
      Database := FBaseDatos;
      Connect;
      Disconnect;
    end;
  except
    on E:Exception do
      raise Exception.Create('Error al conectarse a la Base de Datos.'+ #10#13 + '* '
                              + e.Message);
  end;
end;

procedure TDMConexion.ConectarANI;
begin
  try
    with conBDANI do
    begin
      //Sebastian Camacho 19/09/2018
      if AmbiEjecApli = 'DESA' then
      begin
        FHost     := '10.10.253.113';
        FUsuario  := 'prodeco.apl';
        FPassword := 'Prodeco2018';
        FBaseDatos:= 'PRODECO_DES';
        FEsquema  := 'prodeco_desa';
        FPuerto   := 5432;
      end
      else
      begin
        FHost     := '172.17.4.22';
        FUsuario  := 'produniandes';
        FPassword := 'Pr0dUn12015d';
        FBaseDatos:= 'UNIANDES';
        FPuerto   := 5432;
      end;
      if AmbiEjecApli = 'QA' then
      begin
        FHost     := '172.17.4.22';
        FUsuario  := 'dsroperacion';
        FPassword := 'Mt1bp02016';
        FBaseDatos:= 'UNIANDES';
        FEsquema  := 'andes_prod';
        FPuerto   := 5432;
      end;
      User     := FUsuario;
      Password := FPassword;
      HostName := FHost;
      Port     := FPuerto;
      Database := FBaseDatos;
      Connect;
      Disconnect;
    end;
  except
    on E:Exception do
      raise Exception.Create('Error al conectarse a la Base de Datos ANI.'+ #10#13 + '* '
                              + e.Message);
  end;
end;
